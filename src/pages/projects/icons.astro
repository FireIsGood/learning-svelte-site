<style lang="scss">
  section {
    > * + * {
      margin-top: 1rem;
    }
  }

  // Main Styles

  .icon-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, 4rem);
    gap: 1rem;
    padding: 1rem;
    justify-content: center;
    border: 2px dashed;
  }

  .icon {
    width: 4rem;
    height: 4rem;
    display: grid;
    font-size: 4rem;
    place-items: center;

    &.smaller {
      font-size: 3rem;
    }
  }
</style>
